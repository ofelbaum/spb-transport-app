<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/layout" xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:map="http://schemas.android.com/apk/res-auto"
                  android:id="@+id/map"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  class="com.emal.android.transport.spb.activity.TouchableMapFragment"
                  map:cameraTargetLat="59.95"
                  map:cameraTargetLng="30.316667"
                  map:cameraZoom="13"
                  map:mapType="normal"
                  map:uiCompass="false"
                  map:uiRotateGestures="false"
                  map:uiScrollGestures="true"
                  map:uiTiltGestures="false"
                  map:uiZoomControls="false"
                  map:uiZoomGestures="true"
                />
        <RelativeLayout
                android:id="@+id/zoomin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/zoom_in_button"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="54dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentBottom="true">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:text="+"
                    android:layout_marginTop="-3dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/zoomout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/zoom_out_button"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentBottom="true">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#777777"
                    android:textSize="60dp"
                    android:text="-"
                    android:layout_marginTop="-25dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <ListView
            android:id="@+id/left_drawer"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#ee444444">
    </ListView>
</android.support.v4.widget.DrawerLayout>
